<%- include('shared/htmlStart') -%>

<h1 class="titleHeading">All Users of Reservation Station</h1>

<table class="receipt">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% if (typeof(users) !== 'undefined'){
            for (var user of users){ %>
                <tr>
                    <td hidden><%= user._id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.password %></td>
                    <td>
                        <a href="/edituser/<%= user._id %>">
                            <button id="buttonStyle" type="button">Edit</button>
                        </a>
                    </td>
                    <td>
                        <a href="/deleteuser/<%= user._id %>">
                            <button id="buttonStyle" type="button">Delete</button>
                        </a>
                    </td>
                </tr>
            <% }
        } %>
    </tbody>
</table>

<%- include('shared/htmlEnd') -%>